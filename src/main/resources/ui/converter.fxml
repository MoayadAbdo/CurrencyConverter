<?xml version="1.0" encoding="UTF-8"?>
<!-- declaration -->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.ConverterController">

    <!-- Top Title -->
    <top>
        <Label text="Currency Converter"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 24px; -fx-padding: 20;"/>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">

            <!-- Amount Row -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Amount:"/>
                <TextField fx:id="amountField" prefWidth="200"/>
            </HBox>

            <!-- Currency Row -->
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER">
                    <Label text="From:"/>
                    <ComboBox fx:id="fromCurrencyBox" prefWidth="120"/>
                </VBox>

                <VBox alignment="CENTER">
                    <Label text="To:"/>
                    <ComboBox fx:id="toCurrencyBox" prefWidth="120"/>
                </VBox>
            </HBox>

            <!-- Convert Button -->
            <Button text="Convert"
                    fx:id="convertButton"
                    onAction="#onConvertButtonClick"
                    prefWidth="120"/>
        </VBox>
    </center>

    <!-- Bottom Result Area -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Result:"/>
            <Label fx:id="resultLabel"
                   text="Result will appear here"
                   style="-fx-font-size: 18px; -fx-padding: 10; -fx-border-color: lightgray;"/>
        </VBox>
    </bottom>

</BorderPane>
